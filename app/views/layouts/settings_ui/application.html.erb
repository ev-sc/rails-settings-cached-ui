<!DOCTYPE html>
<html>
<head>
  <title>Settings UI</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <style>
    body {
      background: linear-gradient(-45deg, #f6b58f, #abe08e, #23a6d5, #23d5ab);
      height: 100vh;
      background-size: 400% 400%;
      animation: gradient 20s ease infinite;
    }

    @keyframes gradient {
      0% {
        background-position: 0% 50%;
      }
      50% {
        background-position: 100% 50%;
      }
      100% {
        background-position: 0% 50%;
      }
    }
  </style>
</head>
<body>

<%= yield %>

</body>
</html>
